function os {
DISTRO=$(cat /etc/os-release | grep -e '^ID=' \
| cut -d = -f 2 | sed -e 's/[[:punct:]]//g' \
| tr [:upper:] [:lower:])
echo $DISTRO
}

function install_pkg {
echo -e "\nInstalling $1..."
case $(os) in
centos | fedora)
    while ! rpm -q $1 >/dev/null 2>&1
    do
        yum -y install $1
        sleep 1
    done
    ;;
ubuntu)
    while ! dpkg -l | grep $1 >/dev/null 2>&1
    do
        apt update
        apt -y install $1
        sleep 1
    done
    ;;
esac
}